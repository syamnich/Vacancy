%nav.navbar.navbar-inverse
  .container-fluid
    .navbar-header
    %ul.nav.navbar-nav
      %li
        %a{ href: root_path } VacancySearch
      %li
        %a{ href: vacancies_path }
          = t '.vacancies'
      %li
        %a{ href: companies_path }
          = t '.companies'
    %ul.nav.navbar-nav.navbar-right
      - if user_signed_in?
        %li.dropdown
          %a.dropdown-toggle{ href: "#", "data-toggle" => "dropdown",
          "role" => "button", "aria-haspopup" => "true",
          "aria-expanded" => "false" }
            = t '.profile'
            %span.caret
          %ul.dropdown-menu
            %li
              = link_to t('.settings'), edit_user_registration_path
            %li
              = link_to t('.exit'), destroy_user_session_path,
              method: :delete
      - else
        %li
          %a{ href: new_user_registration_path }
            %span.glyphicon.glyphicon-user
            = t('.sign_up')
        %li
          %a{ href: new_user_session_path }
            %span.glyphicon.glyphicon-log-in
            = t('.sign_in')