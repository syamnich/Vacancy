.row
  .col-md-12
    %h2
      = @companies.name
- @vacancies.each do |vacancy|
  .row
    .col-md-12
      %h2
        = vacancy.name
  .row
    .col-md-4
      = t '.deadline'
      = l vacancy.date, format: :short
    .col-md-1
      = vacancy.state
  .row
    .col-md-12
      %p.lead
        = vacancy.description