.row
  .col-xs-12
    %h2
      = @vacancy.name
.row
  .col-xs-4
    = t '.deadline'
    = l @vacancy.date, format: :short
  .col-xs-1
    = @vacancy.state
.row
  .col-xs-12
    %p.lead
      = @vacancy.description
.row
  .col-xs-12
    = form_for [@vacancy, @cvfile] do |f|
      = f.label :file, t('.file_path')
      = f.file_field :file
      = f.submit t('.send'), class: "btn btn-primary btn-xs send"
